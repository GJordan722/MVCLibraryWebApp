@using System.Web.Mvc.Html;
@using System.Web;
@{
    string mainBtn = "Keyword";
    string option1 = "Title";
    string option2 = "Author";
    string option3 = "Publisher";
    string option4 = "ID";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryWebApp.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="row">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4 col-2">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BBNB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="searchbar" class="col-sm-8 mb-4 border-bottom bg-white p-0 d-inline-flex flex-sm-grow-1">
             @*   <div class="dropdown border-bottom h-100 ">
                   <a class="nav-link dropdown-toggle btn btn-secondary text-white h-100 border" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @mainBtn
                    </a>

                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <form asp-area="" asp-action="CategoryChange" asp-controller="Search" method="post">
                        <li>@Html.RadioButton("CategoryChange",option1) @option1</li>
                        <li>@Html.RadioButton("CategoryChange",option2) @option2</li>
                        <li>@Html.RadioButton("CategoryChange",option3) @option3</li>
                        <li>@Html.RadioButton("CategoryChange",option4) @option4</li>
                        </form>
                    </ul>
                </div>*@
                 <form asp-area="" asp-action="Search" asp-controller="Search" method="post" class="h-100 d-flex col-sm-7 mb-4 border-bottom bg-white p-0 flex-sm-grow-1">
                        @Html.TextBox("Search",null,new {@type="search",@class="w-100 h-100", @placeholder="Search",@aria_label="Search"})
                        <button type="submit" class="btn btn-primary h-100" style="height:100%;"><span class="bi-search"></span></button>
                    </form>
            </div>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-4 col-2">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 row">
                        <li class="nav-item col-4">
                        </li>
                        <li class="nav-item col-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a>
                        </li>
                        <li class="nav-item col-4">
                          
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LibraryWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
