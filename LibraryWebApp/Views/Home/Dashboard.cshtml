@model UserModel
@{

    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome Back @Model.FirstName !</h1>
    @switch (Model.Role_ID)
    {
        case 1:
            <div class="row p-5">
                <div class="col-sm-4">
                    @Html.ActionLink("Edit Users","EditUser","Admin",null,new{@class="btn btn-secondary"})
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View All Hold Media","ViewHoldIO","Admin",null,new{@class="btn btn-secondary"})
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View All Checked Out","ViewCheckIO","Admin",null,new{@class="btn btn-secondary"})
                </div>
            </div>
            break;
        case 2:
               <div class="row p-5">
                <div class="col-sm-4">
                    <button>Edit User</button>
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View All Hold Media","ViewHoldIO","Admin",null,new{@class="btn btn-secondary"})
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View All Checked Out","ViewCheckIO","Admin",null,new{@class="btn btn-secondary"})
                </div>
            </div>
            break;
        case 3:
               <div class="row p-5">
                <div class="col-sm-4">

                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View My Holds","ShowHoldIO","Patron",null,new{@class="btn btn-secondary"})
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("View My Checked Out","ShowCheckIO","Patron",null,new{@class="btn btn-secondary"})
                </div>
            </div>
            break;

    }

</div>
