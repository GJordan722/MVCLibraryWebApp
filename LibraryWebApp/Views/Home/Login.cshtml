@model UserModel
@{
    ViewBag.Title = "Sign In";
}

<div>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="row pt-3">
            <div class="col-sm-5">
                <div class="card ">
                    <div class="card-header">
                        <h4><strong>Sign In</strong></h4>
                               @if (TempData["UMessage"] != null)
                                {
                                    <p class="text-danger">@TempData["UMessage"]</p>
                                }
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-9">
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m=>m.Username,new {@Placeholder = "Enter Username",@class="form-control"})
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                           
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                @Html.LabelFor(m => m.Password)
                                @Html.TextBoxFor(m=>m.Password,new {@Placeholder = "Enter Password",@class="form-control",@type="password"})
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-3 mt-4">
                                @Html.CheckBox("Hidden",false)
                                @Html.Label("Hidden","Show Password")
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
        <button>Submit</button>
    }
   
</div>