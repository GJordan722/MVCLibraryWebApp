@model ListUserModel
@using System.Text;
@using Microsoft.AspNetCore.Mvc;

@{
    ViewData["Title"] = "Browse";

}

@if (Model.ListUsers.Count > 0)
{
    <div class="row">
        <div class="col-sm-5"></div>
        <div class="col-sm-5"></div>
        <div class="col-sm-2"> @Html.ActionLink("Back","Dashboard","Home",null,new{@class="btn btn-primary"})</div>
    </div>
    <div class="d-inline-block">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Account ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Role ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel um in Model.ListUsers)
                {
                    <tr scope="row">
                        <td>@um.Account_ID</td>
                        <td>@um.Username</td>
                        <td>@um.Role_ID</td>
                        <td>@um.Email</td>
                        <td>@um.FirstName</td>
                        <td>@um.LastName</td>
                        <td>@Html.ActionLink("Edit","EditU","Admin",um,new {@class="btn btn-success"})</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
}
else
{
    <p>No Results found</p>
}